{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "target": "es5",
    "baseUrl": ".",
    "noEmitOnError": true,
    "paths": {
      "use-client-memo": ["./src/index.ts"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["./dist", "node_modules"]
}
